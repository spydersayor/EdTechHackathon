generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        Int       @id @default(autoincrement())
  name      String
  email     String    @unique
  password  String
  role      Role      @default(STUDENT)
  phone     String?
  degree    String?
  branch    String?
  gradYear  Int?
  jobs      Job[]     @relation("UserJobs")
  apps      Application[]
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
}

model Job {
  id          Int           @id @default(autoincrement())
  title       String
  description String
  company     String
  location    String?
  salary      String?
  tags        String[]
  createdBy   User          @relation("UserJobs", fields: [createdById], references: [id])
  createdById Int
  apps        Application[]
  createdAt   DateTime      @default(now())
  updatedAt   DateTime      @updatedAt
}

model Application {
  id        Int       @id @default(autoincrement())
  resumeUrl String?
  status    AppStatus @default(APPLIED)
  job       Job       @relation(fields: [jobId], references: [id])
  jobId     Int
  student   User      @relation(fields: [studentId], references: [id])
  studentId Int
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
}

enum Role {
  STUDENT
  PLACEMENT
}

enum AppStatus {
  APPLIED
  SHORTLISTED
  REJECTED
  HIRED
}
